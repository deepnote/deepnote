{
  "name": "@deepnote/cli",
  "version": "0.5.0",
  "description": "Command-line interface for running Deepnote projects locally and on Deepnote Cloud",
  "keywords": [
    "cli",
    "deepnote",
    "notebook",
    "data-science"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deepnote/deepnote.git",
    "directory": "packages/cli"
  },
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "deepnote": "./dist/bin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "pnpm run generate:skill-schema && tsdown",
    "dev": "tsx src/bin.ts",
    "generate:skill-schema": "tsx scripts/generate-skill-schema.ts",
    "test": "vitest",
    "watch": "tsdown --watch"
  },
  "dependencies": {
    "@deepnote/blocks": "workspace:*",
    "@deepnote/convert": "workspace:*",
    "@deepnote/database-integrations": "workspace:*",
    "@deepnote/reactivity": "workspace:*",
    "@deepnote/runtime-core": "workspace:*",
    "@inquirer/prompts": "^8.2.1",
    "@shikijs/cli": "^3.21.0",
    "@toon-format/toon": "^2.1.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.2",
    "diff": "^8.0.3",
    "dotenv": "^17.2.3",
    "ora": "^9.0.0",
    "wrap-ansi": "^9.0.2",
    "yaml": "^2.8.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@inquirer/testing": "^3.1.1",
    "json-schema-to-typescript": "^15.0.4",
    "tsx": "^4.20.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
