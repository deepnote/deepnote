{
  "name": "@deepnote/mcp",
  "version": "0.2.1",
  "description": "MCP server for AI-assisted Deepnote notebook creation and manipulation",
  "keywords": [
    "mcp",
    "deepnote",
    "notebook",
    "ai",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deepnote/deepnote.git",
    "directory": "packages/mcp"
  },
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "deepnote-mcp": "./dist/bin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/bin.ts",
    "test": "vitest",
    "test:tool": "node dist/test-tool.js",
    "watch": "tsdown --watch"
  },
  "dependencies": {
    "@deepnote/blocks": "workspace:*",
    "@deepnote/cli": "workspace:*",
    "@deepnote/convert": "workspace:*",
    "@deepnote/reactivity": "workspace:*",
    "@deepnote/runtime-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "yaml": "^2.8.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.17.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
