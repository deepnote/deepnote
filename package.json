{
  "name": "deepnote",
  "version": "0.0.0",
  "description": "Deepnote Open Source",
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.17.1"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "jest",
    "typecheck": "tsc --noEmit -p tsconfig.json && pnpm -r exec tsc --noEmit",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "spell-check:fix": "cspell \"**/*.{md,txt,json,js,ts,tsx,jsx,py,yml,yaml}\" --no-exit-code --show-suggestions",
    "spell-check": "cspell \"**/*.{md,txt,json,js,ts,tsx,jsx,py,yml,yaml}\""
  },
  "lint-staged": {
    "**/*.{html,md,yaml,yml}": ["pnpm exec biome format --write"],
    "**/.gitignore": [
      "sort -o .gitignore .gitignore"
    ]
  },
  "keywords": [".deepnote", "data-science", "deepnote", "jupyter", "notebook"],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@biomejs/biome": "2.2.4",
    "cspell": "^8.19.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
