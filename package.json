{
  "name": "deepnote",
  "version": "0.0.0",
  "private": true,
  "description": "Deepnote Open Source",
  "keywords": [
    ".deepnote",
    "data-science",
    "deepnote",
    "jupyter",
    "notebook"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "pnpm -r run build",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "spell-check": "cspell \"**/*.{md,txt,json,js,ts,tsx,jsx,py,yml,yaml}\"",
    "spell-check:fix": "cspell \"**/*.{md,txt,json,js,ts,tsx,jsx,py,yml,yaml}\" --no-exit-code --show-suggestions",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json && pnpm -r exec tsc --noEmit"
  },
  "lint-staged": {
    "**/*.{html}": [
      "pnpm exec biome format --write"
    ],
    "**/*.{md,yml,yaml}": [
      "pnpm exec prettier --write"
    ],
    ".gitignore": [
      "sort -o .gitignore .gitignore"
    ],
    "**/package.json": "sort-package-json"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "24.6.1",
    "@vitest/coverage-v8": "3.2.4",
    "cspell": "9.2.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "sort-package-json": "3.4.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.17.1"
  }
}
