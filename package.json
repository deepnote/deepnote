{
  "name": "deepnote",
  "version": "0.0.0",
  "description": "Deepnote Open Source",
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.17.1"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json && pnpm -r exec tsc --noEmit",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "spell-check:fix": "cspell \"**/*.{md,txt,json,js,ts,tsx,jsx,py,yml,yaml}\" --no-exit-code --show-suggestions",
    "spell-check": "cspell \"**/*.{md,txt,json,js,ts,tsx,jsx,py,yml,yaml}\""
  },
  "lint-staged": {
    "**/*.{html,md}": ["pnpm exec biome format --write"],
    "**/*.{yml,yaml}": ["pnpm exec prettier --write"],
    ".gitignore": ["sort -o .gitignore .gitignore"]
  },
  "keywords": [".deepnote", "data-science", "deepnote", "jupyter", "notebook"],
  "devDependencies": {
    "@types/node": "24.6.1",
    "@vitest/coverage-v8": "3.2.4",
    "@biomejs/biome": "2.2.4",
    "cspell": "9.2.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
